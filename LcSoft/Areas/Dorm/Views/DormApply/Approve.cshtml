@model XkSystem.Areas.Dorm.Models.DormApply.Approve
@{
    ViewBag.TopBar = "Hidden";
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div class="container-fluid">
        <div class="form-horizontal">
            @Html.HiddenFor(d => d.DormApplyApprove.Id)
            <div class="form-group">
                <div class="col-xs-6">
                    <label class="col-xs-5 control-label">
                        @Html.LabelForRequired(d => d.DormApplyApprove.StudentCode)
                    </label>
                    <div class="col-xs-7">
                        @Html.TextBoxFor(d => d.DormApplyApprove.StudentCode, new { @class = "form-control", @readonly = "readonly" })
                    </div>
                </div>
                <div class="col-xs-6">
                    <label class="col-xs-5 control-label">
                        @Html.LabelForRequired(d => d.DormApplyApprove.StudentName)
                    </label>
                    <div class="col-xs-7">
                        @Html.TextBoxFor(d => d.DormApplyApprove.StudentName, new { @class = "form-control", @readonly = "readonly" })
                    </div>
                </div>
            </div>
            <div class="form-group">
                <div class="col-xs-6">
                    <label class="col-xs-5 control-label">
                        @Html.LabelForRequired(d => d.DormApplyApprove.Sex)
                    </label>
                    <div class="col-xs-7">
                        @Html.TextBoxFor(d => d.DormApplyApprove.Sex, new { @class = "form-control", @readonly = "readonly" })
                    </div>
                </div>
                <div class="col-xs-6">
                    <label class="col-xs-5 control-label">
                        @Html.LabelForRequired(d => d.DormApplyApprove.InputDate)
                    </label>
                    <div class="col-xs-7">
                        @Html.TextBoxFor(d => d.DormApplyApprove.InputDate, new { @class = "form-control", @readonly = "readonly" })
                    </div>
                </div>
            </div>
            <div class="form-group">
                <div class="col-xs-12">
                    <label class="control-label" style="width:20%;float:left">
                        @Html.LabelForRequired(d => d.DormApplyApprove.Remark)
                    </label>
                    <div class="col-xs-10" style="width:80%;float:left">
                        @Html.TextAreaFor(d => d.DormApplyApprove.Remark, new { @class = "form-control", @readonly = "readonly" })
                    </div>
                </div>
            </div>
            <div class="form-group">
                <div class="col-xs-12">
                    <label class="control-label" style="width:20%;float:left">
                        @Html.LabelForRequired(d => d.DormApplyApprove.CheckStatus)
                    </label>
                    <div class="col-xs-10" style="width:80%;float:left">
                        @Html.DropDownListFor(d => d.DormApplyApprove.CheckStatus, Model.CheckStatusList, new { @class = "form-control" })
                        @*@Html.TextAreaFor(d => d.DormApplyApprove.Remark, new { @class = "form-control"})*@
                    </div>
                </div>
            </div>
            <div class="form-group">
                <div class="col-xs-12">
                    <label class="control-label" style="width:20%;float:left">
                        @Html.LabelForRequired(d => d.DormApplyApprove.CheckRemark)
                    </label>
                    <div class="col-xs-10" style="width:80%;float:left">
                        @Html.TextAreaFor(d => d.DormApplyApprove.CheckRemark, new { @class = "form-control", @cols = "5" })
                    </div>
                </div>
            </div>
            <div class="form-group hidden">
                <div class="col-xs-12">
                    <button type="submit" class="btn btn-primary">
                        <span class="glyphicon glyphicon-ok"></span>
                        @Resources.LocalizedText.BtnOk
                    </button>
                </div>
            </div>
        </div>
    </div>
}

