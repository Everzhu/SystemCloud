@model XkSystem.Areas.Student.Models.StudentHonor.HonorEdit
@{
    ViewBag.TopBar = "Hidden";
}

@using (Html.BeginForm("HonorEdit", "StudentHonor", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()
    <div class="container-fluid">
        <div class="form-horizontal">
            @Html.HiddenFor(d => d.honorEdit.Id)
            <div class="form-group">
                <label class="col-xs-3 control-label">
                    @Html.LabelForRequired(d => d.honorEdit.StudentCode)
                </label>
                <div class="col-xs-9">
                    @Html.TextBoxFor(d => d.honorEdit.StudentCode, new { @class = "form-control"@*, autocomplete="off"*@ })
                    @Html.ValidationMessageFor(d => d.honorEdit.StudentCode)
                </div>
            </div>
            <div class="form-group">
                <label class="col-xs-3 control-label">
                    @Html.LabelForRequired(d => d.honorEdit.HonorName)
                </label>
                <div class="col-xs-9">
                    @Html.TextBoxFor(d => d.honorEdit.HonorName, new { @class = "form-control" })
                    @Html.ValidationMessageFor(d => d.honorEdit.HonorName)
                </div>
            </div>
            <div class="form-group">
                <label class="col-xs-3 control-label">
                    @Html.LabelForRequired(d => d.honorEdit.StudentHonorLevelId)
                </label>
                <div class="col-xs-9">
                    @Html.DropDownListFor(d => d.honorEdit.StudentHonorLevelId, Model.StudentHonorLevelList, "", new { @class = "form-control" })
                    @Html.ValidationMessageFor(d => d.honorEdit.StudentHonorLevelId)
                </div>
            </div>
            <div class="form-group">
                <label class="col-xs-3 control-label">
                    @Html.LabelForRequired(d => d.honorEdit.StudentHonorTypeId)
                </label>
                <div class="col-xs-9">
                    @Html.DropDownListFor(d => d.honorEdit.StudentHonorTypeId, Model.StudentHonorTypeList, "", new { @class = "form-control" })
                    @Html.ValidationMessageFor(d => d.honorEdit.StudentHonorTypeId)
                </div>
            </div>
            <div class="form-group">
                <label class="col-xs-3 control-label">
                    @Html.LabelForRequired(d => d.honorEdit.HonorFile)
                </label>
                <div class="col-xs-9">
                    <input type="file" id="@Html.IdFor(d => Model.honorEdit.HonorFile)" name="@Html.NameFor(d =>Model.honorEdit.HonorFile)" class="form-control" />
                    @Html.ValidationMessageFor(d => d.honorEdit.HonorFile)
                </div>
            </div>
            <div class="form-group hidden">
                <div class="col-xs-12">
                    <button type="submit" class="btn btn-primary">
                        <span class="glyphicon glyphicon-ok"></span>
                        @Resources.LocalizedText.BtnOk
                    </button>
                </div>
            </div>
        </div>
    </div>
}

