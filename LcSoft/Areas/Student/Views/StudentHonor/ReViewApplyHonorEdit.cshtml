@model XkSystem.Areas.Student.Models.StudentHonor.ReViewApplyHonorEdit
@{
    ViewBag.TopBar = "Hidden";
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div class="container-fluid">
        <div class="form-horizontal">
            @Html.HiddenFor(d => d.edit.Id)
            @Html.HiddenFor(d=>d.edit.IsReViewYes)
            <div class="form-group">
                <label class="col-xs-3 control-label">
                    @Html.LabelForRequired(d => d.edit.CheckRemark)
                </label>
                <div class="col-xs-9">
                    @Html.TextAreaFor(d => d.edit.CheckRemark, new { @class = "form-control", cols = "5" })
                </div>
            </div>
            <div class="form-group hidden">
                <div class="col-xs-12">
                    <button type="submit" class="btn btn-primary">
                        <span class="glyphicon glyphicon-ok"></span>
                        @Resources.LocalizedText.BtnOk
                    </button>
                </div>
            </div>
        </div>
    </div>
}
