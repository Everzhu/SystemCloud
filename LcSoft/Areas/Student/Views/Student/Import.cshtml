@model XkSystem.Areas.Student.Models.Student.Import
@{
    ViewBag.TopBar = "Hidden";
}

@using (Html.BeginForm("Import", "Student", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()
    <div class="container-fluid">
        <div class="form-horizontal">
            <div class="form-group">
                <label class="col-xs-3 control-label">
                    @Html.DisplayNameFor(d => d.UploadFile)
                </label>
                <div class="col-xs-9">
                    <input type="file" id="@Html.IdFor(d => Model.UploadFile)" name="@Html.NameFor(d => Model.UploadFile)" data-val='true' data-val-required='该字段是必须的!' class="form-control" />
                    @Html.ValidationMessageFor(d => d.UploadFile)
                    <span class="help-block">请按照【<a href="@Url.Action("ImportTemplate")" target="_self">模板</a>】编辑内容上传。<font class="text-danger">模板中标红的列是必须填写的。</font></span>
                </div>
            </div>
            <div class="form-group">
                <label class="col-xs-3 control-label">
                    导入选项
                </label>
                <div class="col-xs-9">
                    <div class="checkbox">
                        <label>
                            @Html.CheckBoxFor(d => d.IsUpdate)
                            对于系统中已存在的数据做更新操作
                        </label>
                    </div>
                    <div class="checkbox hidden">
                        <label>
                            @Html.CheckBoxFor(d => d.IsRemove)
                            导入前删除现有数据（<span class="label label-danger" style="font-size:90%">危险，特别注意</span>）
                        </label>
                    </div>
                </div>
            </div>
            <div class="form-group hidden">
                <div class="col-xs-12">
                    <button type="submit" class="btn btn-primary">
                        <span class="glyphicon glyphicon-ok"></span>
                        @Resources.LocalizedText.BtnOk
                    </button>
                </div>
            </div>
        </div>
        <fieldset>
            <legend>
                导入结果
            </legend>
            @Html.ValidationSummary()
            @if (Model.ImportList.Count > 0)
            {
                <div class="table-responsive">
                    <table class="table table-bordered table-hover table-striped">
                        <thead>
                            <tr>
                                <th>
                                    @Html.DisplayNameFor(d => d.ImportList.FirstOrDefault().StudentCode)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(d => d.ImportList.FirstOrDefault().StudentName)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(d => d.ImportList.FirstOrDefault().PinYin)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(d => d.ImportList.FirstOrDefault().CMIS)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(d => d.ImportList.FirstOrDefault().SexName)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(d => d.ImportList.FirstOrDefault().StudentTypeName)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(d => d.ImportList.FirstOrDefault().StudyTypeName)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(d => d.ImportList.FirstOrDefault().Mobile)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(d => d.ImportList.FirstOrDefault().Address)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(d => d.ImportList.FirstOrDefault().IdentityNumber)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(d => d.ImportList.FirstOrDefault().Qq)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(d => d.ImportList.FirstOrDefault().BloodName)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(d => d.ImportList.FirstOrDefault().NationName)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(d => d.ImportList.FirstOrDefault().PartyName)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(d => d.ImportList.FirstOrDefault().Birthday)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(d => d.ImportList.FirstOrDefault().FatherName)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(d => d.ImportList.FirstOrDefault().FatherCompany)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(d => d.ImportList.FirstOrDefault().FatherJob)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(d => d.ImportList.FirstOrDefault().FatherPhone)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(d => d.ImportList.FirstOrDefault().MotherName)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(d => d.ImportList.FirstOrDefault().MotherCompany)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(d => d.ImportList.FirstOrDefault().MotherJob)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(d => d.ImportList.FirstOrDefault().MotherPhone)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(d => d.ImportList.FirstOrDefault().Error)
                                </th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var a in Model.ImportList)
                            {
                                <tr>
                                    <td>
                                        @a.StudentCode
                                    </td>
                                    <td>
                                        @a.StudentName
                                    </td>
                                    <td>
                                        @a.PinYin
                                    </td>
                                    <td>
                                        @a.CMIS
                                    </td>
                                    <td>
                                        @a.SexName
                                    </td>
                                    <td>
                                        @a.StudentTypeName
                                    </td>
                                    <td>
                                        @a.StudyTypeName
                                    </td>
                                    <td>
                                        @a.Mobile
                                    </td>
                                    <td>
                                        @a.Address
                                    </td>
                                    <td>
                                        @a.IdentityNumber
                                    </td>
                                    <td>
                                        @a.Qq
                                    </td>
                                    <td>
                                        @a.BloodName
                                    </td>
                                    <td>
                                        @a.NationName
                                    </td>
                                    <td>
                                        @a.PartyName
                                    </td>
                                    <td>
                                        @a.Birthday
                                    </td>
                                    <td>
                                        @a.FatherName
                                    </td>
                                    <td>
                                        @a.FatherCompany
                                    </td>
                                    <td>
                                        @a.FatherJob
                                    </td>
                                    <td>
                                        @a.FatherPhone
                                    </td>
                                    <td>
                                        @a.MotherName
                                    </td>
                                    <td>
                                        @a.MotherCompany
                                    </td>
                                    <td>
                                        @a.MotherJob
                                    </td>
                                    <td>
                                        @a.MotherPhone
                                    </td>
                                    <td class="text-danger">
                                        @a.Error
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
        </fieldset>
    </div>
}

<script type="text/javascript">
    $(function () {
        $(function ()
        {
            if (@(Model.Status ? 1 : 0) == 1)
            {
                alert("导入成功!");
                window.parent.location.reload();
            }
        });
        $("#@Html.IdFor(d => Model.IsRemove)").click(function()
        {
            if ($(this).is(':checked'))
            {
                if (confirm("确定要导入前清空现在数据?") == false)
                {
                    $(this).attr("checked", false);
                }
            }
        });
    });
</script>