@model XkSystem.Areas.Student.Models.StudentFamily.List

@using (Html.BeginForm())
{
    <div class="table-responsive">
        <table class="table table-bordered table-hover table-striped">
            <thead>
                <tr>
                    <th style="width:30px">

                    </th>
                    <th>
                        @Html.DisplayNameFor(d => d.StudentFamilyList.FirstOrDefault().FamilyName)
                    </th>
                    <th>
                        @Html.DisplayNameFor(d => d.StudentFamilyList.FirstOrDefault().KinshipName)
                    </th>
                    <th>
                        @Html.DisplayNameFor(d => d.StudentFamilyList.FirstOrDefault().EducationName)
                    </th>
                    <th>
                        @Html.DisplayNameFor(d => d.StudentFamilyList.FirstOrDefault().UnitName)
                    </th>
                    <th>
                        @Html.DisplayNameFor(d => d.StudentFamilyList.FirstOrDefault().Job)
                    </th>
                    <th>
                        @Html.DisplayNameFor(d => d.StudentFamilyList.FirstOrDefault().Mobile)
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var a in Model.StudentFamilyList)
                {
                    <tr>
                        <td>
                            <a href="##" onclick="DeleteFamily('@a.FamilyName','@a.KinshipName')">
                                <span class="glyphicon glyphicon-remove text-danger form-control-static" style="cursor:pointer"></span>
                            </a>
                        </td>
                        <td class="text-left">
                            <a href="@Url.Action("Edit", new { familyId = a.Id, studentID = Model.StudentId })" class="pop" dataHeight="250px">@a.FamilyName</a>
                        </td>
                        <td>
                            @a.KinshipName
                        </td>
                        <td>
                            @a.EducationName
                        </td>
                        <td>
                            @a.UnitName
                        </td>
                        <td>
                            @a.Job
                        </td>
                        <td>
                            @a.Mobile
                        </td>
                    </tr>
                }
            </tbody>
            <tfoot>
                <tr>
                    <td>
                        <a href="@Url.Action("Edit", "StudentFamily")" class="pop" dataHeight="250px">
                            <span class="glyphicon glyphicon-plus text-primary form-control-static" style="cursor:pointer"></span>
                        </a>
                    </td>
                    <td colspan="5"></td>
                </tr>
            </tfoot>
        </table>
    </div>
}

<script type="text/javascript">
    function myPost1(guid) {
        postNoConfirm("@Url.Action("Delete", "StudentFamily")", { guid: guid });
    }
</script>