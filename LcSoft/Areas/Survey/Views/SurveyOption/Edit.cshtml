@model XkSystem.Areas.Survey.Models.SurveyOption.Edit
@{
    ViewBag.TopBar = "Hidden";
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <nav class="navbar navbar-default mybar">
        <div class="navbar-right">
            <a href="@Url.Action("List")" class="btn btn-default">
                <span class="glyphicon glyphicon-chevron-left"></span>
                @Resources.LocalizedText.BtnReturn
            </a>
        </div>
    </nav>
    <div class="container-fluid">
        <div class="form-horizontal">
            @Html.HiddenFor(d => d.OptionEdit.Id)
            <div class="form-group">
                <label class="col-md-2 control-label">
                    @Html.LabelForRequired(d => d.OptionEdit.No)
                </label>
                <div class="col-md-10">
                    @Html.TextBoxFor(d => d.OptionEdit.No, new { @class = "form-control", placeholder = "自动排序编号" })
                    @Html.ValidationMessageFor(d => d.OptionEdit.No)
                </div>
            </div>
            <div class="form-group">
                <label class="col-md-2 control-label">
                    @Html.LabelForRequired(d => d.OptionEdit.OptionName)
                </label>
                <div class="col-md-10">
                    @Html.TextBoxFor(d => d.OptionEdit.OptionName, new { @class = "form-control" })
                    @Html.ValidationMessageFor(d => d.OptionEdit.OptionName)
                </div>
            </div>
            <div class="form-group">
                <label class="col-md-2 control-label">
                    @Html.LabelForRequired(d => d.OptionEdit.OptionValue)
                </label>
                <div class="col-md-10">
                    @Html.TextBoxFor(d => d.OptionEdit.OptionValue, new { @class = "form-control" })
                    @Html.ValidationMessageFor(d => d.OptionEdit.OptionValue)
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-12">
                    <button type="submit" class="btn btn-primary">
                        <span class="glyphicon glyphicon-ok"></span>
                        @Resources.LocalizedText.BtnOk
                    </button>
                    <a href="@Url.Action("List")" class="btn btn-default">
                        <span class="glyphicon glyphicon-remove"></span>
                        @Resources.LocalizedText.BtnCancel
                    </a>
                </div>
            </div>
        </div>
    </div>
}