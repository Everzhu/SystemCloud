@model XkSystem.Areas.Survey.Models.SurveyOption.List

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken();
    <nav class="navbar navbar-default mybar">
        <div class="navbar-right">
            <a href="@Url.Action("List","SurveyItem")" class="btn btn-default">
                <span class="glyphicon glyphicon-chevron-left"></span>
                @Resources.LocalizedText.BtnReturn
            </a>
            <a href="@Url.Action("Edit")" class="btn btn-primary">
                <span class="glyphicon glyphicon-plus"></span>
                @Resources.LocalizedText.BtnAdd
            </a>
            <a href="@Url.Action("Delete")" class="btn btn-danger delete">
                <span class="glyphicon glyphicon-trash"></span>
                @Resources.LocalizedText.BtnDelete
            </a>
        </div>
        <div class="collapse navbar-collapse mycollapse" id="toolbar-collapse">
            <div class="navbar-left navbar-form">
                <div class="input-group form-group">
                    @Html.TextBoxFor(d => d.SearchText, new { @class = "form-control", placeholder = @Resources.LocalizedText.TipSearch })
                    <span class="input-group-btn">
                        <button class="btn btn-default" type="submit">
                            <span class="glyphicon glyphicon-search"></span>
                            @Resources.LocalizedText.BtnSearch
                        </button>
                    </span>
                </div>
            </div>
        </div>
    </nav>
    <div class="table-responsive">
        <table class="table table-bordered table-hover table-striped">
            <thead>
                <tr>
                    <th style="width:30px">
                        @Html.CheckBox("CboxAll")
                    </th>
                    <th style="width:80px">
                        @Html.DisplayNameFor(d => d.OptionList.FirstOrDefault().No)
                    </th>
                    <th>
                        @Html.DisplayNameFor(d => d.OptionList.FirstOrDefault().OptionName)
                    </th>
                    <th style="width:100px">
                        @Html.DisplayNameFor(d => d.OptionList.FirstOrDefault().OptionValue)
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var a in Model.OptionList)
                {
                    <tr>
                        <td>
                            <input type="checkbox" id="CboxId" name="CboxId" value="@a.Id" />
                        </td>
                        <td>
                            @a.No
                        </td>
                        <td class="text-left">
                            <a href="@Url.Action("Edit", new { id = a.Id })">@a.OptionName</a>
                        </td>
                        <td>
                            @a.OptionValue
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
}