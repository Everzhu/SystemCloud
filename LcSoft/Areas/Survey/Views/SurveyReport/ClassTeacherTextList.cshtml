@model  XkSystem.Areas.Survey.Models.SurveyReport.ClassTeacherTextList
@{
    ViewBag.TopBar = "hidden";
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken();
    @Html.HiddenFor(d => d.SurveyId)
    @Html.HiddenFor(d => d.SurveyTeacherId)
    @Html.HiddenFor(d => d.SurveyClassId)
    @Html.HiddenFor(d => d.SurveyItemId)
    <div class='table-responsive'>
        <table id="tbTable" class='table table-bordered table-hover table-striped'>
            <thead>
                <tr>
                    <th style="width:60px">
                        序号
                    </th>
                    <th style="width:120px">
                        @Html.DisplayNameFor(p => Model.SurveyClassTeacherTextList.FirstOrDefault().StudentCode)
                    </th>
                    <th style="width:120px">
                        @Html.DisplayNameFor(p => Model.SurveyClassTeacherTextList.FirstOrDefault().StudentName)
                    </th>
                    <th>
                        @Html.DisplayNameFor(p => Model.SurveyClassTeacherTextList.FirstOrDefault().SurveyText)
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var a in Model.SurveyClassTeacherTextList)
                {
                    <tr>
                        <td>
                            @(Model.SurveyClassTeacherTextList.IndexOf(a) + 1)
                        </td>
                        <td>
                            @a.StudentCode
                        </td>
                        <td>
                            @a.StudentName
                        </td>
                        <td class="text-left">
                            @a.SurveyText
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
    @Html.Partial("_PartialPager", Model.Page)
}