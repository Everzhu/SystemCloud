@model XkSystem.Areas.Basis.Models.ClassStudent.ChangeClass
@{
    ViewBag.TopBar = "Hidden";
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div class="container-fluid">
        <div class="form-horizontal">
            @Html.HiddenFor(d => d.Id)
            <div class="form-group">
                <label class="col-xs-3 control-label">
                    @Html.LabelForRequired(d => d.ClassId)
                </label>
                <div class="col-xs-9">
                    @Html.DropDownListFor(d => d.ClassId, Model.ClassList, new { @class = "form-control" })
                </div>
            </div>
            <div class="form-group">
                <label class="col-xs-3 control-label">
                    @Html.LabelForRequired(d => d.No)
                </label>
                <div class="col-xs-9">
                    @Html.TextBoxFor(d => d.No, new { @class = "form-control" })
                </div>
            </div>
            <div class="form-group hidden">
                <div class="col-md-12">
                    <button type="submit" class="btn btn-primary">
                        <span class="glyphicon glyphicon-ok"></span>
                        @Resources.LocalizedText.BtnOk
                    </button>
                </div>
            </div>
        </div>
    </div>
}

