@model XkSystem.Areas.Basis.Models.School.Edit

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div class="row">
        <div class="col-xs-6">
            <h4>学校信息设置</h4>
        </div>
        <div class="col-xs-6 text-right">

        </div>
    </div>
    <hr />
    <br />
    <div class="form-horizontal">
        @Html.HiddenFor(d => d.DataEdit.Id)
        <div class="form-group">
            <label class="col-md-2 control-label">
                @Html.LabelForRequired(d => d.DataEdit.SchoolName)
            </label>
            <div class="col-md-4">
                @Html.TextBoxFor(d => d.DataEdit.SchoolName, new { @class = "form-control" })
                @Html.ValidationMessageFor(d => d.DataEdit.SchoolName)
            </div>
            <label class="col-md-2 control-label">
                @Html.LabelForRequired(d => d.DataEdit.SchoolNameEn)
            </label>
            <div class="col-md-4">
                @Html.TextBoxFor(d => d.DataEdit.SchoolNameEn, new { @class = "form-control" })
                @Html.ValidationMessageFor(d => d.DataEdit.SchoolNameEn)
            </div>
        </div>
        <div class="form-group">
            <label class="col-md-2 control-label">
                @Html.LabelForRequired(d => d.DataEdit.SchoolType)
            </label>
            <div class="col-md-4">
                @Html.TextBoxFor(d => d.DataEdit.SchoolType, new { @class = "form-control" })
                @Html.ValidationMessageFor(d => d.DataEdit.SchoolType)
            </div>
            <label class="col-md-2 control-label">
                @Html.LabelForRequired(d => d.DataEdit.SchoolMaster)
            </label>
            <div class="col-md-4">
                @Html.TextBoxFor(d => d.DataEdit.SchoolMaster, new { @class = "form-control" })
                @Html.ValidationMessageFor(d => d.DataEdit.SchoolMaster)
            </div>
        </div>
        <div class="form-group">
            <label class="col-md-2 control-label">
                @Html.LabelForRequired(d => d.DataEdit.Phone)
            </label>
            <div class="col-md-4">
                @Html.TextBoxFor(d => d.DataEdit.Phone, new { @class = "form-control" })
                @Html.ValidationMessageFor(d => d.DataEdit.Phone)
            </div>
            <label class="col-md-2 control-label">
                @Html.LabelForRequired(d => d.DataEdit.Email)
            </label>
            <div class="col-md-4">
                @Html.TextBoxFor(d => d.DataEdit.Email, new { @class = "form-control" })
                @Html.ValidationMessageFor(d => d.DataEdit.Email)
            </div>
        </div>
        <div class="form-group">
            <label class="col-md-2 control-label">
                @Html.LabelForRequired(d => d.DataEdit.PostCode)
            </label>
            <div class="col-md-4">
                @Html.TextBoxFor(d => d.DataEdit.PostCode, new { @class = "form-control" })
                @Html.ValidationMessageFor(d => d.DataEdit.PostCode)
            </div>
            <label class="col-md-2 control-label">
                @Html.LabelForRequired(d => d.DataEdit.Address)
            </label>
            <div class="col-md-4">
                @Html.TextBoxFor(d => d.DataEdit.Address, new { @class = "form-control" })
                @Html.ValidationMessageFor(d => d.DataEdit.Address)
            </div>
        </div>
        <div class="form-group">
            <label class="col-sm-2 control-label">
                @Html.LabelForRequired(d => d.DataEdit.Remark)
            </label>
            <div class="col-sm-10">
                @Html.TextAreaFor(d => d.DataEdit.Remark, new { @class = "form-control", style = "max-width: 100%;resize: none", @rows = "5" })
                @Html.ValidationMessageFor(d => d.DataEdit.Remark)
            </div>
        </div>
    </div>

    <div class="form-group">
        <div class="col-xs-12 text-center">
            <button type="submit" class="btn btn-primary">
                <span class="glyphicon glyphicon-ok"></span>
                @Resources.LocalizedText.BtnOk
            </button>
        </div>
    </div>
}

