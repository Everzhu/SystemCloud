@model XkSystem.Areas.Basis.Models.ClassManager.EditClass
@{
    ViewBag.TopBar = "Hidden";
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div class="container-fluid">
        @Html.HiddenFor(d => d.TeacherId)
        <input type="hidden" id="TeacherId" value="@Model.TeacherId" />
        <div class="ClassInfo">
                <div class="navbar-left navbar-form">
                    <input type="hidden" id="hdfModalType" value="StudentList" />
                    <div class="input-group form-group" style="width:380px">
                        @*@Html.TextBoxFor(d => d.SearchText, new { @class = "form-control searchText", placeholder = Resources.LocalizedText.TipSearch })*@
                        <span class="input-group-btn">
                            <button class="btn btn-primary" type="submit">
                                <span class="glyphicon glyphicon-search"></span>
                            </button>
                        </span>
                    </div>
            </div>
            <div class="table-responsive">
                <table class="table table-bordered table-hover table-striped" id="tbTable">
                    <thead>
                        <tr>
                            <th style="width:30px">
                                @Html.CheckBox("CboxAll")
                            </th>
                            <th style="width:80px" class="hidden">
                                @Html.DisplayNameFor(d => d.ClassList.FirstOrDefault().No)
                            </th>
                            <th>
                                @Html.DisplayNameFor(d => d.ClassList.FirstOrDefault().ClassName)
                            </th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var a in Model.ClassList)
                        {
                            <tr>
                                <td>
                                    <input type="checkbox" id="CboxId" name="CboxId" value="@a.Id" />
                                </td>
                                <td class="hidden">
                                    @a.No
                                </td>
                                <td>
                                    @a.ClassName
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
            @*@Html.Partial("_PartialPager", Model.Page)*@
        </div>
    </div>
}

