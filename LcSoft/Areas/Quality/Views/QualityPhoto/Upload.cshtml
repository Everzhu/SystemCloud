@model XkSystem.Areas.Quality.Models.QualityPhoto.Edit
@{
    ViewBag.TopBar = "Hidden";
}
<link href="@Url.Content("~/Content/uploadify.css")" rel="stylesheet" />
<script src="@Url.Content("~/Scripts/jquery.uploadify.min.js")" type="text/javascript"></script>

<div class="container-fluid">
    <div class="form-horizontal">
        <div class="form-group">
            <label class="col-xs-3 control-label">
                照片文件
            </label>
            <div class="col-xs-9">
                <input type="file" id="@Html.IdFor(d => d.QualityPhotoEdit.PhotoTitle)" name="@Html.NameFor(d => d.QualityPhotoEdit.PhotoTitle)" data-val='true' data-val-required='该字段是必须的!' class="form-control" />
                @Html.ValidationMessageFor(d => d.QualityPhotoEdit.PhotoTitle)
            </div>
        </div>
    </div>
</div>
<script type="text/javascript">
    $(function () {
        $("#@Html.IdFor(d => d.QualityPhotoEdit.PhotoTitle)").uploadify({
            buttonText: '请选择照片...',
            fileTypeDesc: '图片文件',
            fileTypeExts: '*.jpg;*.jpeg;*.png;*.gif',
            multi: true,
            swf: '@Url.Content("~/Content/uploadify.swf")',
            uploader: '@Url.Action("Upload")',
            onQueueComplete: function () {
                alert("上传成功！");
                window.parent.location.reload();
            }
        });
    });
</script>