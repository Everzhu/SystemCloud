@model XkSystem.Areas.Quality.Models.QualityItemGroup.List

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken();
            <ul class="nav nav-pills nav-justified">
                <li class="active"><a href="@Url.Action("Edit","Quality",new { id = Model.QualityId })">1、评价信息</a></li>
                <li class="active"><a href="#">2、评价分组</a></li>
                <li class="disabled"><a href="#">3、评价内容</a></li>
            </ul>

         
            <nav class="navbar">
                <div class="navbar-right">
                    <a href="@Url.Action("Edit",new { QualityId = Model.QualityId })" class="btn btn-primary pop" dataHeight="150px">
                        <span class="glyphicon glyphicon-plus"></span>
                        @Resources.LocalizedText.BtnAdd
                    </a>
                    <a href="@Url.Action("Delete")" class="btn btn-danger delete">
                        <span class="glyphicon glyphicon-trash"></span>
                        @Resources.LocalizedText.BtnDelete
                    </a>
                </div>
                    <div class="navbar-left navbar-form">
                        <div class="input-group form-group">
                            @Html.TextBoxFor(d => d.SearchText, new { @class = "form-control", placeholder = Resources.LocalizedText.TipSearch })
                            <span class="input-group-btn">
                                <button class="btn btn-primary" type="submit">
                                    <span class="glyphicon glyphicon-search"></span>
                                </button>
                            </span>
                        </div>
                    </div>
            </nav>


            <div class="table-responsive">
                <table class="table table-bordered table-hover table-striped">
                    <thead>
                        <tr>
                            <th style="width:30px">
                                @Html.CheckBox("CboxAll")
                            </th>
                            <th style="width:80px">
                                @Html.DisplayNameFor(d => d.QualityItemGroupList.FirstOrDefault().No)
                            </th>
                            <th>
                                @Html.DisplayNameFor(d => d.QualityItemGroupList.FirstOrDefault().QualityItemGroupName)
                            </th>
                            <th>
                                @Html.DisplayNameFor(d => d.QualityItemGroupList.FirstOrDefault().QualityName)
                            </th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var a in Model.QualityItemGroupList)
                        {
                            <tr>
                                <td>
                                    <input type="checkbox" id="CboxId" name="CboxId" value="@a.Id" />
                                </td>
                                <td>
                                    @a.No
                                </td>
                                <td class="text-left">
                                    <a href="@Url.Action("Edit", new { id = a.Id, qualityId = Model.QualityId})" class="pop" dataHeight="150px">@a.QualityItemGroupName</a>
                                </td>
                                <td>
                                    @a.QualityName
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
            <div class="form-inline text-center" style="padding-top:20px;">
                <a href="@Url.Action("Edit","Quality",new { Id = Model.QualityId })" class="btn btn-default">
                    <span class="glyphicon glyphicon-chevron-left"></span>
                    上一步
                </a>
                <a href="@Url.Action("List","QualityItem", new { qualityId = Model.QualityId })" class="btn btn-primary">
                    <span class="glyphicon glyphicon-ok"></span>
                    @Resources.LocalizedText.BtnNext
                </a>
                <a href="@Url.Action("List","Quality")" class="btn btn-success">
                    <span class="glyphicon glyphicon-ok"></span>
                    完成
                </a>
                <a href="@Url.Action("List","Quality")" class="btn btn-warning">
                    <span class="glyphicon glyphicon-remove"></span>
                    取消
                </a>
            </div>
}