@model XkSystem.Areas.Elective.Models.ElectiveData.List

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken();
    <nav class="navbar">
        <div class="navbar-right">
            <a href="@Url.Action("Edit")" class="btn btn-primary">
                <span class="glyphicon glyphicon-plus"></span>
                @Resources.LocalizedText.BtnAdd
            </a>
            <a href="@Url.Action("Delete")" class="btn btn-danger delete">
                <span class="glyphicon glyphicon-trash"></span>
                @Resources.LocalizedText.BtnDelete
            </a>
        </div>
            <div class="navbar-left navbar-form">
                <div class="input-group form-group">
                    @Html.TextBoxFor(d => d.SearchText, new { @class = "form-control", placeholder = Resources.LocalizedText.TipSearch })
                    <span class="input-group-btn">
                        <button class="btn btn-primary" type="submit">
                            <span class="glyphicon glyphicon-search"></span>
                        </button>
                    </span>
                </div>
            </div>
    </nav>
    
    <div class="table-responsive">
        <table class="table table-bordered table-hover table-striped">
            <thead>
                <tr>
                    <th style="width:30px">
                        @Html.CheckBox("CboxAll")
                    </th>
                    <th>
                        @Html.DisplayNameFor(d => d.ElectiveDataList.FirstOrDefault().ElectiveOrgName)
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var a in Model.ElectiveDataList)
                {
                    <tr>
                        <td>
                            <input type="checkbox" id="CboxId" name="CboxId" value="@a.Id" />
                        </td>
                        <td class="text-left">
                            <a href="@Url.Action("Edit", new { id = a.Id })">@a.ElectiveOrgName</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
}