@model XkSystem.Areas.Moral.Models.MoralOption.Edit

@{ 
    ViewBag.TopBar = "Hidden";
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div class="container-fluid">
        <div class="form-horizontal">
            @Html.HiddenFor(d => d.MoralOptionEdit.Id)
            @Html.HiddenFor(d=>d.MoralItemId)
            <div class="form-group">
                <label class="col-xs-3 control-label">
                    @Html.LabelForRequired(d => d.MoralOptionEdit.No)
                </label>
                <div class="col-xs-9">
                    @Html.TextBoxFor(d => d.MoralOptionEdit.No, new { @class = "form-control", placeholder = "自动排序编号" })
                    @Html.ValidationMessageFor(d => d.MoralOptionEdit.No)
                </div>
            </div>

            <div class="form-group">
                <label class="col-xs-3 control-label">
                    @Html.LabelForRequired(d => d.MoralOptionEdit.MoralOptionName)
                </label>
                <div class="col-xs-9">
                    @Html.TextBoxFor(d => d.MoralOptionEdit.MoralOptionName, new { @class = "form-control" })
                    @Html.ValidationMessageFor(d => d.MoralOptionEdit.MoralOptionName)
                </div>
            </div>

            <div class="form-group">
                <label class="col-xs-3 control-label">
                    @Html.LabelForRequired(d => d.MoralOptionEdit.MoralOptionValue)
                </label>
                <div class="col-xs-9">
                    @Html.TextBoxFor(d => d.MoralOptionEdit.MoralOptionValue, new { @class = "form-control" })
                    @Html.ValidationMessageFor(d => d.MoralOptionEdit.MoralOptionValue)
                </div>
            </div>

            <div class="form-group hidden">
                <div class="col-xs-12">
                    <button type="submit" class="btn btn-primary">
                        <span class="glyphicon glyphicon-ok"></span>
                        @Resources.LocalizedText.BtnOk
                    </button>
                </div>
            </div>
        </div>
    </div>
}