@model XkSystem.Areas.Moral.Models.MoralDataReason.List

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken();

    <div class="row">
        <div class="col-xs-6">
            <h4>评分原因设置</h4>
        </div>
        <div class="col-xs-6 text-right">
            <a href="@Url.Action("Edit","MoralData")" class="btn btn-default">
                <span class="glyphicon glyphicon-chevron-left"></span>
                @Resources.LocalizedText.BtnReturn
            </a>

            <a href="@Url.Action("Edit",new { MoralId=Model.MoralId})" class="btn btn-primary pop">
                <span class="glyphicon glyphicon-plus"></span>
                @Resources.LocalizedText.BtnAdd
            </a>
            @*<a href="@Url.Action("Delete")" class="btn btn-danger delete">
            <span class="glyphicon glyphicon-trash"></span>
            @Resources.LocalizedText.BtnDelete
        </a>*@
        </div>
    </div>
    <hr />
    <nav class="navbar">
        <div class="navbar-left navbar-form">
            <div class="input-group form-group">
                @Html.TextBoxFor(d => d.SearchText, new { @class = "form-control", placeholder = Resources.LocalizedText.TipSearch })
                <span class="input-group-btn">
                    <button class="btn btn-primary" type="submit">
                        <span class="glyphicon glyphicon-search"></span>
                    </button>
                </span>
            </div>
        </div>
    </nav>
    <div class="table-responsive">
        <table class="table table-bordered table-hover table-striped" id="tbTable">
            <thead>
                <tr>
                    <th style="width:30px">
                        @Html.CheckBox("CboxAll")
                    </th>
                    <th style="width:80px">
                        @Html.DisplayNameFor(d => Model.MoralDataReasonList.FirstOrDefault().No)
                    </th>
                    <th>
                        @Html.DisplayNameFor(d => Model.MoralDataReasonList.FirstOrDefault().tbMoralItemName)
                    </th>
                    <th>
                        @Html.DisplayNameFor(d => Model.MoralDataReasonList.FirstOrDefault().Reason)
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.MoralDataReasonList)
                {
                    <tr>
                        <td>
                            <input type="checkbox" id="CboxId" name="CboxId" value="@item.Id" />
                        </td>
                        <td>@item.No</td>
                        <td>
                            @item.tbMoralItemName
                        </td>
                        <td class="text-left">
                            <a href="@Url.Action("Edit",new { Id=item.Id,MoralId=Model.MoralId})" class="pop">
                                @item.Reason
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
    
}