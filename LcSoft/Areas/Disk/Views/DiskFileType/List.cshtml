@model XkSystem.Areas.Disk.Models.DiskFileType.List

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken();
    <h4>文件类型</h4>
    <nav class="navbar">
        <div class="navbar-right">
            <a href="@Url.Action("List","DiskFile")" class="btn btn-default">
                <span class="glyphicon glyphicon-chevron-left"></span>
                @Resources.LocalizedText.BtnReturn
            </a>
            <a href="@Url.Action("Edit")" class="btn btn-primary pop" dataHeight="200px">
                <span class="glyphicon glyphicon-plus"></span>
                @Resources.LocalizedText.BtnAdd
            </a>
            <a href="@Url.Action("Delete")" class="btn btn-danger delete">
                <span class="glyphicon glyphicon-trash"></span>
                @Resources.LocalizedText.BtnDelete
            </a>
        </div>
            <div class="navbar-left navbar-form">
                <div class="input-group form-group">
                    @Html.TextBoxFor(d => d.SearchText, new { @class = "form-control", placeholder = Resources.LocalizedText.TipSearch })
                    <span class="input-group-btn">
                        <button class="btn btn-primary" type="submit">
                            <span class="glyphicon glyphicon-search"></span>
                        </button>
                    </span>
                </div>
            </div>
    </nav>




            <div class="table-responsive">
                <table class="table table-bordered table-hover table-striped" id="tbTable">
                    <thead>
                        <tr>
                            <th style="width:30px">
                                @Html.CheckBox("CboxAll")
                            </th>
                            <th style="width:80px">
                                @Html.DisplayNameFor(d => d.DataList.FirstOrDefault().No)
                            </th>
                            <th>
                                @Html.DisplayNameFor(d => d.DataList.FirstOrDefault().DiskFileTypeName)
                            </th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var a in Model.DataList)
                        {
                            <tr>
                                <td>
                                    <input type="checkbox" id="CboxId" name="CboxId" value="@a.Id" />
                                </td>
                                <td>
                                    @a.No
                                </td>
                                <td class="text-left">
                                    <a href="@Url.Action("Edit", new { id = a.Id })" class="pop" dataHeight="200px">@a.DiskFileTypeName</a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
}
