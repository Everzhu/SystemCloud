@model XkSystem.Areas.Exam.Models.ExamReport.List

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken();
        <div class="tab">
            <ul class="nav nav-tabs">
                <li><a href="@Url.Action("ReportOrgTeacher")">任课查询</a></li>
                <li class="active"><a href="@Url.Action("TermTotalMarkReportBD")">年级查询</a></li>
            </ul>
        </div>
        <h4>期末报表</h4>
        <nav class="navbar">
            <div class="navbar-right">
                <a href="@Url.Action("ExportReportSubjectTeacher",new {examId=Model.ExamId,subjectId=Model.SubjectId,CourseId=Model.CourseId,orgId=Model.OrgId,gradeId=Model.GradeId,SearchText = Model.SearchText })" class="btn btn-primary">
                    <span class="glyphicon glyphicon-download-alt"></span>
                    @Resources.LocalizedText.BtnExportToExcel
                </a>
            </div>
            <div class="navbar-left navbar-form">
                    @Html.DropDownListFor(d => d.ExamId, Model.ExamList, new { @class = "form-control postback" })
                    @Html.DropDownListFor(d => d.SubjectId, Model.SubjectList, new { @class = "form-control postback" })
                    @Html.DropDownListFor(d => d.CourseId, Model.CourseList, new { @class = "form-control postback" })
                    @Html.DropDownListFor(d => d.OrgId, Model.OrgList, new { @class = "form-control postback" })
                    <div class="input-group form-group">
                        @Html.TextBoxFor(d => d.SearchText, new { @class = "form-control", placeholder = Resources.LocalizedText.TipSearch })
                        <span class="input-group-btn">
                            <button class="btn btn-primary" type="submit">
                                <span class="glyphicon glyphicon-search"></span>
                            </button>
                        </span>
                    </div>
                </div>
        </nav>
            <div class="table-responsive" id="div1">
                <table class="table table-bordered table-hover table-striped">
                    <thead>
                        <tr>
                            <th>
                                @Html.DisplayNameFor(d => d.ExamMarkList.FirstOrDefault().StudentCode)
                            </th>
                            <th>
                                @Html.DisplayNameFor(d => d.ExamMarkList.FirstOrDefault().StudentName)
                            </th>
                            <th>
                               平时
                            </th>
                            <th>
                               考勤分5分
                            </th>
                            <th>
                               期中
                            </th>
                            <th>
                               期末
                            </th>
                            <th>
                               总分
                            </th>
                            <th>
                               等级
                            </th>
                            <th>
                               积点
                            </th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var a in Model.ExamMarkList)
                        {
                            <tr>
                                <td>
                                    @a.StudentCode
                                </td>
                                <td>
                                    @a.StudentName
                                </td>
                                <td>
                                    @a.ClassName
                                </td>
                                <td>
                                    @a.AppraiseMark
                                </td>
                                <td>
                                    @a.TotalMark
                                </td>
                                <td>
                                    @a.TotalGradeRank
                                </td>
                                <td>
                                    @a.SegmentMark
                                </td>
                                <td>
                                    @a.SegmentGradeRank
                                </td>
                                <td>
                                    @a.ExamLevelName
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>

            <div class="table-responsive" id="div2">
                <table class="table table-bordered table-hover table-striped">
                    <thead>
                        <tr>
                            <th>
                                @Html.DisplayNameFor(d => d.ExamMarkList.FirstOrDefault().StudentCode)
                            </th>
                            <th>
                                @Html.DisplayNameFor(d => d.ExamMarkList.FirstOrDefault().StudentName)
                            </th>
                            <th>
                                考勤分5分
                            </th>
                            <th>
                                过程性评价45分
                            </th>
                            <th>
                                考试或论文50分
                            </th>
                            <th>
                                总分
                            </th>
                            <th>
                                等级
                            </th>
                            <th>
                                积点
                            </th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var a in Model.ExamMarkList)
                        {
                            <tr>
                                <td>
                                    @a.StudentCode
                                </td>
                                <td>
                                    @a.StudentName
                                </td>
                                <td>
                                    @a.ClassName
                                </td>
                                <td>
                                    @a.AppraiseMark
                                </td>
                                <td>
                                    @a.TotalMark
                                </td>
                                <td>
                                    @a.TotalGradeRank
                                </td>
                                <td>
                                    @a.SegmentMark
                                </td>
                                <td>
                                    @a.SegmentGradeRank
                                </td>
                                <td>
                                    @a.ExamLevelName
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
}
