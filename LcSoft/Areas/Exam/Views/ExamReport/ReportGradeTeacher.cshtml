@model XkSystem.Areas.Exam.Models.ExamReport.ReportGradeTeacher

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken();
    <div class="tab">
        <ul class="nav nav-tabs">
            <li><a href="@Url.Action("ReportOrgTeacher")">任课成绩</a></li>
            <li><a href="@Url.Action("ReportClassTeacher")">班级成绩</a></li>
            <li><a href="@Url.Action("ReportSubjectTeacher")">科组成绩</a></li>
            <li class="active"><a href="@Url.Action("ReportGradeTeacher")">年级成绩</a></li>
        </ul>
    </div>
    <nav class="navbar">
        <div class="navbar-right">
            <a href="@Url.Action("ExportReportGradeTeacher",new {examId=Model.ExamId, CourseId=Model.CourseId,ClassId=Model.ClassId,gradeId=Model.GradeId,SearchText = Model.SearchText })" class="btn btn-primary navbar-btn">
                <span class="glyphicon glyphicon-download-alt"></span>
                @Resources.LocalizedText.BtnExportToExcel
            </a>
        </div>
        <div class="navbar-left navbar-form">
            @Html.DropDownListFor(d => d.GradeId, Model.GradeList, new { @class = "form-control postback" })
            @Html.DropDownListFor(d => d.ClassId, Model.ClassList, "==全部班级==", new { @class = "form-control postback" })
            @Html.DropDownListFor(d => d.ExamId, Model.ExamList, new { @class = "form-control postback" })
            @Html.DropDownListFor(d => d.CourseId, Model.CourseList, new { @class = "form-control postback" })
            <div class="input-group form-group">
                @Html.TextBoxFor(d => d.SearchText, new { @class = "form-control", placeholder = Resources.LocalizedText.TipSearch })
                <span class="input-group-btn">
                    <button class="btn btn-primary" type="submit">
                        <span class="glyphicon glyphicon-search"></span>
                    </button>
                </span>
            </div>
        </div>
    </nav>
    <div class="table-responsive">
        <table class="table table-bordered table-hover table-striped">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(d => d.ExamMarkList.FirstOrDefault().StudentCode)
                    </th>
                    <th>
                        @Html.DisplayNameFor(d => d.ExamMarkList.FirstOrDefault().StudentName)
                    </th>
                    <th>
                        @Html.DisplayNameFor(d => d.ExamMarkList.FirstOrDefault().ClassName)
                    </th>
                    <th>
                        @Html.DisplayNameFor(d => d.ExamMarkList.FirstOrDefault().AppraiseMark)
                    </th>
                    <th>
                        @Html.DisplayNameFor(d => d.ExamMarkList.FirstOrDefault().TotalMark)
                    </th>
                    <th>
                        @Html.DisplayNameFor(d => d.ExamMarkList.FirstOrDefault().TotalGradeRank)
                    </th>
                    <th>
                        @Html.DisplayNameFor(d => d.ExamMarkList.FirstOrDefault().SegmentMark)
                    </th>
                    <th>
                        @Html.DisplayNameFor(d => d.ExamMarkList.FirstOrDefault().SegmentGradeRank)
                    </th>
                    <th>
                        @Html.DisplayNameFor(d => d.ExamMarkList.FirstOrDefault().ExamLevelName)
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var a in Model.ExamMarkList)
                {
                    <tr>
                        <td>
                            @a.StudentCode
                        </td>
                        <td>
                            @a.StudentName
                        </td>
                        <td>
                            @a.ClassName
                        </td>
                        <td>
                            @a.AppraiseMark
                        </td>
                        <td>
                            @a.TotalMark
                        </td>
                        <td>
                            @a.TotalGradeRank
                        </td>
                        <td>
                            @a.SegmentMark
                        </td>
                        <td>
                            @a.SegmentGradeRank
                        </td>
                        <td>
                            @a.ExamLevelName
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
}
