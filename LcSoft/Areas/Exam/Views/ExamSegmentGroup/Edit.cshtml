@model XkSystem.Areas.Exam.Models.ExamSegmentGroup.Edit
@{
    ViewBag.TopBar = "Hidden";
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div class="container-fluid">
        <div class="form-horizontal">
            @Html.HiddenFor(d => d.ExamSegmentGroupEdit.Id)
            <div class="form-group">
                <label class="col-xs-3 control-label">
                    @Html.LabelForRequired(d => d.ExamSegmentGroupEdit.No)
                </label>
                <div class="col-xs-9">
                    @Html.TextBoxFor(d => d.ExamSegmentGroupEdit.No, new { @class = "form-control", placeholder = "自动排序编号" })
                    @Html.ValidationMessageFor(d => d.ExamSegmentGroupEdit.No)
                </div>
            </div>
            <div class="form-group">
                <label class="col-xs-3 control-label">
                    @Html.LabelForRequired(d => d.ExamSegmentGroupEdit.ExamSegmentGroupName)
                </label>
                <div class="col-xs-9">
                    @Html.TextBoxFor(d => d.ExamSegmentGroupEdit.ExamSegmentGroupName, new { @class = "form-control" })
                    @Html.ValidationMessageFor(d => d.ExamSegmentGroupEdit.ExamSegmentGroupName)
                </div>
            </div>
            <div class="form-group hidden">
                <div class="col-xs-12">
                    <button type="submit" class="btn btn-primary">
                        <span class="glyphicon glyphicon-ok"></span>
                        @Resources.LocalizedText.BtnOk
                    </button>
                </div>
            </div>
        </div>
    </div>
}