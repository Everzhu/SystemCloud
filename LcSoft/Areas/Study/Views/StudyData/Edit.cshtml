@model XkSystem.Areas.Study.Models.StudyData.Edit
@{
    ViewBag.TopBar = "Hidden";
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div class="container-fluid">
        <div class="form-horizontal">
            @Html.HiddenFor(d => d.StudyDataEdit.Id)
            @Html.HiddenFor(d => d.StudyId)
            @Html.HiddenFor(d => d.StudentId)
            @Html.HiddenFor(d => d.DateSearch)
            <div class="form-group">
                <label class="col-xs-3 control-label">
                    @Html.LabelForRequired(d => d.StudyDataEdit.StudyOptionId)
                </label>
                <div class="col-xs-9">
                    @Html.DropDownListFor(d => d.StudyDataEdit.StudyOptionId, Model.StudyOptionList, "", new { @class = "form-control dropSelect" })
                    @Html.ValidationMessageFor(d => d.StudyDataEdit.StudyOptionId)
                </div>
            </div>
            <div class="form-group">
                <label class="col-xs-3 control-label">
                    @Html.LabelForRequired(d => d.StudyDataEdit.Remark)
                </label>
                <div class="col-xs-9">
                    @Html.TextAreaFor(d => d.StudyDataEdit.Remark, new { @class = "form-control", @rows = "5" })
                    @Html.ValidationMessageFor(d => d.StudyDataEdit.Remark)
                </div>
            </div>
            <div class="form-group hidden">
                <div class="col-md-12">
                    <button type="submit" class="btn btn-primary">
                        <span class="glyphicon glyphicon-ok"></span>
                        @Resources.LocalizedText.BtnOk
                    </button>
                </div>
            </div>
        </div>
    </div>
}