@model XkSystem.Areas.Study.Models.StudyApply.Info
@{
    ViewBag.TopBar = "Hidden";
}
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div class="container-fluid">
        <div class="form-horizontal">
            @Html.HiddenFor(d => d.StudyApplyInfo.Id)
            @Html.HiddenFor(d => d.StudyId)
            <div class="form-group">
                <label class="col-xs-3 control-label">
                    @Html.LabelForRequired(d => d.StudyApplyInfo.Remark)
                </label>
                <div class="col-xs-9">
                    @Html.TextAreaFor(d => d.StudyApplyInfo.Remark, new { @class = "form-control", @rows = "3" })
                    @Html.ValidationMessageFor(d => d.StudyApplyInfo.Remark)
                </div>
            </div>
            <div class="form-group">
                <label class="col-xs-3 control-label">
                    @Html.LabelForRequired(d => d.StudyApplyInfo.CheckStatusName)
                </label>
                <div class="col-xs-9">
                    @Html.TextBoxFor(d => d.StudyApplyInfo.CheckStatusName, new { @class = "form-control", @readonly = "readonly" })
                </div>
            </div>
            <div class="form-group">
                <label class="col-xs-3 control-label">
                    @Html.LabelForRequired(d => d.StudyApplyInfo.CheckUserName)
                </label>
                <div class="col-xs-9">
                    @Html.TextBoxFor(d => d.StudyApplyInfo.CheckUserName, new { @class = "form-control",@readonly = "readonly" })
                </div>
            </div>
            <div class="form-group">
                <label class="col-xs-3 control-label">
                    @Html.LabelForRequired(d => d.StudyApplyInfo.CheckDate)
                </label>
                <div class="col-xs-9">
                    @Html.TextBoxFor(d => d.StudyApplyInfo.CheckDate, new { @class = "form-control", @readonly = "readonly" })
                </div>
            </div>
            <div class="form-group">
                <label class="col-xs-3 control-label">
                    @Html.LabelForRequired(d => d.StudyApplyInfo.CheckRemark)
                </label>
                <div class="col-xs-9">
                    @Html.TextAreaFor(d => d.StudyApplyInfo.CheckRemark, new { @class = "form-control", @rows = "3", @readonly = "readonly" })
                    @Html.ValidationMessageFor(d => d.StudyApplyInfo.CheckRemark)
                </div>
            </div>
            <div class="form-group hidden">
                <div class="col-xs-12">
                    <button type="submit" class="btn btn-primary">
                        <span class="glyphicon glyphicon-ok"></span>
                        @Resources.LocalizedText.BtnOk
                    </button>
                </div>
            </div>
        </div>
    </div>
}