@model XkSystem.Areas.Sys.Models.SysIndex.Index
@{
    ViewBag.Title = "首页";
    Layout = "~/Views/Shared/_MobileLayout.cshtml";
}
@section css{
    <link rel="stylesheet" type="text/css" href="@Url.Content("~/Content/mui/css/index.css")" />
}
<div id="index-header">
    <div>
        <img src="@Url.Content("~/Content/mui/img/photo.png")" />
    </div>
    <h5>@Html.DisplayFor(item => item.UserInfo.UserName) | @Html.DisplayFor(item => item.UserInfo.UserTypeName) | <a style="color:white;" href="@Url.Content("~/Sys/SysIndex/LoginOut?isHome=true")">退出</a></h5>
</div>
<div id="menu">
    <ul>
        @{
            int num = 3;
            foreach (var item in Model.SysWechatMenuList)
            {
                if (num > 9)
                {
                    num = 3;
                }
                var src = Url.Content("~/Content/mui/img/item" + num + ".png");
                <li><a style="background: url(@src) no-repeat center 20px;background-size:auto 35%;" href="@Url.Content("~/")@item.MenuUrl">@item.MenuName</a></li>
                num++;
            }
        }
    </ul>
</div>

