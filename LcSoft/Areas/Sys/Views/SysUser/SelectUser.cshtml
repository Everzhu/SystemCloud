@model XkSystem.Areas.Sys.Models.SysUser.SelectUser
@{
    ViewBag.TopBar = "Hidden";
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken();
    <div class="input-group form-group" style="width:380px">
        @Html.TextBoxFor(d => d.SearchText, new { @class = "form-control searchText", placeholder = Resources.LocalizedText.TipSearch })
        <span class="input-group-btn">
            <button class="btn btn-primary" type="submit">
                <span class="glyphicon glyphicon-search"></span>
            </button>
        </span>
    </div>
    <div class="table-responsive">
        <table class="table table-bordered table-hover table-striped">
            <thead>
                <tr>
                    <th style="width:30px">
                        @Html.CheckBox("CboxAll")
                    </th>
                    <th>
                        @Html.DisplayNameFor(d => d.UserList.FirstOrDefault().UserCode)
                    </th>
                    <th>
                        @Html.DisplayNameFor(d => d.UserList.FirstOrDefault().UserName)
                    </th>
                    <th>
                        @Html.DisplayNameFor(d => d.UserList.FirstOrDefault().SexName)
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var a in Model.UserList)
                {
                    <tr>
                        <td>
                            <input type="checkbox" id="CboxId" name="CboxId" value="@a.Id" />
                        </td>
                        <td class="text-left">
                            @a.UserCode
                        </td>
                        <td class="text-left">
                            @a.UserName
                        </td>
                        <td>
                            @a.SexName
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
        @Html.Partial("_PartialPager", Model.Page)
}