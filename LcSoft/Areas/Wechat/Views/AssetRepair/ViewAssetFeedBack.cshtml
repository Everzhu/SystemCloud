@model LcSoft.Areas.Wechat.Models.AssetRepair.AssetFeedBackEditModel
@{
    ViewBag.Title = "报修关单反馈";
    Layout = "~/Views/Shared/_MobileLayout.cshtml";
}
<header class="mui-bar mui-bar-nav">
    <a class="mui-action-back mui-icon mui-icon-left-nav mui-pull-left"></a>
    <h1 class="mui-title">报修关单反馈</h1>
</header>
<div class="mui-content">
    <div class="mui-card">
        <div class="mui-card-header mui-card-media" style="height:40vw;background-image:url(@Url.Content("~/Files/AssetRepair/")@Model.AssetFeedBackEditDto.FileName)">
            @if (string.IsNullOrEmpty(Model.AssetFeedBackEditDto.FileName))
            {
                <div style="color:#ccc;line-height:40vw;text-align:center;">暂无图片</div>
            }
        </div>
        <div class="mui-card-content">
            <div class="mui-card-content-inner">
                <p style="color: #333;">@Model.AssetFeedBackEditDto.Remark</p>
            </div>
        </div>
    </div>
</div>
