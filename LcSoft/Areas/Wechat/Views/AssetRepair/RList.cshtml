@model LcSoft.Areas.Wechat.Models.AssetRepair.RepairStatisticsListModel

@foreach (var a in Model.RepairStatisticsListDto)
{
    <div class="mui-card">
        <ul class="mui-table-view">
            <li class="mui-table-view-cell">受理人：@a.UserName</li>
            <li class="mui-table-view-cell">
                <a class="mui-navigate-right" href="@Url.Action("RepairStatisticsInfo","AssetRepair",new { area="Wechat",UserId=a.Id, InfoType=0 })">
                    <span class="mui-badge mui-badge-primary">@a.AcceptedCount</span>
                    接受数量
                </a>
            </li>
            <li class="mui-table-view-cell">
                <a class="mui-navigate-right" href="@Url.Action("RepairStatisticsInfo","AssetRepair",new { area="Wechat",UserId=a.Id, InfoType=1 })">
                    <span class="mui-badge mui-badge-success">@a.FinishCount</span>
                    完成数量
                </a>
            </li>
            <li class="mui-table-view-cell">
                <a class="mui-navigate-right" href="@Url.Action("RepairStatisticsInfo","AssetRepair",new { area="Wechat",UserId=a.Id, InfoType=2 })">
                    <span class="mui-badge mui-badge-purple">@a.SatisfiedCount</span>
                    好评数量
                </a>
            </li>
            <li class="mui-table-view-cell">
                <a class="mui-navigate-right" href="@Url.Action("RepairStatisticsInfo","AssetRepair",new { area="Wechat",UserId=a.Id, InfoType=3 })">
                    <span class="mui-badge mui-badge-danger">@a.BadReviewCount</span>
                    差评数量
                </a>
            </li>
        </ul>
    </div>
}
@if (Model.Page.PageIndex != Model.Page.PageCount)
{
    <a href="##" id="PageNext" title="加载更多" data-pageIndex="@(Model.Page.PageIndex+1)" class="btn btn-default btn-sm">
        <span class="text-primary">加载更多</span>
        <span class="glyphicon glyphicon-forward text-primary hidden-xs" aria-hidden="true"></span>
    </a>
}
