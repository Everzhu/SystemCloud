@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@model XkSystem.Areas.Wechat.Models.WeApprover.List

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken();
    <nav class="navbar navbar-default mybar">
        @*<div class="navbar-right">
            <a href="@Url.Action("Edit")" class="btn btn-primary pop" dataHeight="100px">
                <span class="glyphicon glyphicon-plus"></span>
                @Resources.LocalizedText.BtnAdd
            </a>
        </div>*@
        <div class="collapse navbar-collapse">
            <div class="navbar-left navbar-text">
                审批角色
            </div>
        </div>
    </nav>
        <hr />
                <div class="navbar-left navbar-form">
                    <div class="input-group form-group">
                        @Html.TextBoxFor(d => d.SearchText, new { @class = "form-control", placeholder = Resources.LocalizedText.TipSearch })
                        <span class="input-group-btn">
                            <button class="btn btn-primary" type="submit">
                                <span class="glyphicon glyphicon-search"></span>
                            </button>
                        </span>
                    </div>
                </div>
            <div class="table-responsive">
                <table class="table table-bordered table-hover table-striped">
                    <thead>
                        <tr>
                            <th style="width:120px">
                                @Html.DisplayNameFor(d => d.RoleList.FirstOrDefault().FlowTypeName)
                            </th>

                            <th>
                                @Html.DisplayNameFor(d => d.RoleList.FirstOrDefault().ApproveNodeName)
                            </th>
                            <th style="width:60px">
                                操作
                            </th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var a in Model.RoleList)
                        {
                            <tr>
                                <td class="text-left">
                                    <a class="pop" dataHeight="500px" dataRefresh="None">@a.FlowTypeName</a>
                                </td>
                                <td class="text-left text-center">
                                    <a class="pop" dataHeight="500px" dataRefresh="None">@a.ApproveNodeName</a>
                                </td>
                                <td>
                                    <a href="@Url.Action("ApproverList","WeApprover", new { FlowApprovalNodeId = a.Id })" dataHeight="100px">
                                        <span class="glyphicon glyphicon-search" title="角色成员"></span>
                                    </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
}


